<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDatosHemo"
    android:background="@drawable/backgro">

    <TextView
        android:id="@+id/textView4"
        android:text="Datos adiccionales:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="56dp"
        android:layout_y="84dp"
        android:fontFamily="@font/light"
        android:textColor="@color/negro"
        android:textSize="25sp"
        android:alpha="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091"/>

    <EditText
        android:id="@+id/editTextEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="56dp"
        android:layout_y="185dp"
        android:ems="10"
        android:inputType="number" />

    <RadioGroup
        android:id="@+id/RbtnMesAño"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="280dp"
        android:layout_y="166dp">

        <RadioButton
            android:id="@+id/radioButtonAños"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Años"
            android:textSize="15sp"
            android:fontFamily="@font/semibold"
            android:alpha="0.5"/>

        <RadioButton
            android:id="@+id/radioButtonMeses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meses"
            android:textSize="15sp"
            android:fontFamily="@font/semibold"
            android:alpha="0.5"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="56dp"
        android:layout_y="250dp"
        android:text="Sexo:"
        android:textSize="15sp"
        android:fontFamily="@font/semibold" />

    <RadioGroup
        android:id="@+id/RbtnSexo"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_x="90dp"
        android:layout_y="272dp">

        <RadioButton
            android:id="@+id/radioButtonMascu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"
            android:textSize="15sp"
            android:fontFamily="@font/semibold"
            android:alpha="0.5"/>

        <RadioButton
            android:id="@+id/radioButtonFemeni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Femenino"
            android:textSize="15sp"
            android:fontFamily="@font/semibold"
            android:alpha="0.5"/>

    </RadioGroup>

    <Button
        android:id="@+id/btnConsultarNivelHem"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_x="107dp"
        android:layout_y="430dp"
        android:background="@drawable/button"
        android:fontFamily="@font/semibold"
        android:onClick="validar"
        android:text="Nivel de Hemoglobina"
        android:textAllCaps="false"
        android:textColor="@color/blanco"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="611dp"/>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="56dp"
        android:layout_y="150dp"
        android:text="Edad:"
        android:textSize="15sp"
        android:fontFamily="@font/semibold" />

</AbsoluteLayout>